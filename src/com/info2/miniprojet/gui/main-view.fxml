<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.info2.miniprojet.gui.MainViewController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <top>
        <VBox spacing="10">
            <Label text="Name Matcher GUI" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Separator/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Query Name:" prefWidth="100"/>
                <TextField fx:id="queryNameField" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Data File/URL:" prefWidth="100"/>
                <TextField fx:id="filePathField" HBox.hgrow="ALWAYS"/>
                <Button text="Browse..." onAction="#browseForFile"/>
            </HBox>
            <Button text="Perform Search" onAction="#performSearchAction" maxWidth="Infinity"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="5">
            <Separator> <VBox.margin><Insets top="10" bottom="5"/></VBox.margin> </Separator>
            <Label text="Results:"/>
            <ListView fx:id="resultsListView" VBox.vgrow="ALWAYS"/>
            <!-- Or use a TableView for more structured results -->
            <!-- <TableView fx:id="resultsTableView" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn text="Name 1" fx:id="colName1"/>
                    <TableColumn text="Name 2" fx:id="colName2"/>
                    <TableColumn text="Score" fx:id="colScore"/>
                    <TableColumn text="Measure" fx:id="colMeasure"/>
                </columns>
            </TableView> -->
        </VBox>
    </center>

    <bottom>
        <Label fx:id="statusLabel" text="Status: Idle"/>
    </bottom>

</BorderPane>